// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String?       @map("password_hash")
  resetPasswordToken   String?   @unique @map("reset_password_token")
  resetPasswordExpires DateTime? @map("reset_password_expires")
  name         String
  avatar       String?
  provider     String?       // 'google' | 'github'
  providerId   String?       @map("provider_id")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  environments Environment[]
  comments     Comment[]
  activityLogs ActivityLog[]
  memberships  EnvironmentMember[]
  cardAssignments CardMember[]

  @@map("users")
}

model Environment {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  boards      Board[]
  labels      Label[]
  members     EnvironmentMember[]
  invites     Invite[]

  @@map("environments")
}

model Board {
  id             String      @id @default(uuid())
  environmentId  String      @map("environment_id")
  name           String
  slug           String
  description    String?
  position       Int         @default(0)
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")
  environment    Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  cards          Card[]

  @@unique([environmentId, slug])
  @@map("boards")
}

model Card {
  id          String    @id @default(uuid())
  boardId     String    @map("board_id")
  title       String
  description String?   @db.VarChar(500)
  completed   Boolean   @default(false)
  position    Int       @default(0)
  dueDate     DateTime? @map("due_date")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  board       Board     @relation(fields: [boardId], references: [id], onDelete: Cascade)

  labels      Label[]
  comments    Comment[]
  activityLogs ActivityLog[]
  members     CardMember[]

  @@map("cards")
}

model Label {
  id            String      @id @default(uuid())
  environmentId String      @map("environment_id")
  name          String
  color         String
  environment   Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  cards         Card[]

  @@map("labels")
}

model Comment {
  id        String   @id @default(uuid())
  cardId    String   @map("card_id")
  userId    String   @map("user_id")
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  attachments Attachment[]

  @@map("comments")
}

model Attachment {
  id        String   @id @default(uuid())
  commentId String   @map("comment_id")
  url       String   @db.Text
  key       String // S3 Key
  filename  String
  type      String // mime-type
  createdAt DateTime @default(now()) @map("created_at")
  
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@map("attachments")
}

model ActivityLog {
  id        String   @id @default(uuid())
  cardId    String   @map("card_id")
  userId    String   @map("user_id")
  action    String
  details   String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("activity_logs")
}

model EnvironmentMember {
  id            String      @id @default(uuid())
  environmentId String      @map("environment_id")
  userId        String      @map("user_id")
  role          MemberRole  @default(MEMBER)
  joinedAt      DateTime    @default(now()) @map("joined_at")

  environment   Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([environmentId, userId])
  @@map("environment_members")
}

model Invite {
  id            String      @id @default(uuid())
  email         String
  environmentId String      @map("environment_id")
  token         String      @unique
  expiresAt     DateTime    @map("expires_at")
  status        InviteStatus @default(PENDING)
  createdAt     DateTime    @default(now()) @map("created_at")

  environment   Environment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  @@index([email])
  @@map("invites")
}

model CardMember {
  id         String   @id @default(uuid())
  cardId     String   @map("card_id")
  userId     String   @map("user_id")
  assignedAt DateTime @default(now()) @map("assigned_at")
  
  card       Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([cardId, userId])
  @@map("card_members")
}

enum MemberRole {
  OWNER
  MEMBER
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
}
